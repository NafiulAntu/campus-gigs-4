{
  "name": "campus-gigs",
  "version": "1.0.0",
  "description": "Campus Gigs - Run both frontend and backend together",
  "scripts": {
    "install:all": "cd BackEnd && npm install && cd ../FrontEnd && npm install",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd BackEnd && node server.js",
    "frontend": "cd FrontEnd && npm run dev",
    "backend:watch": "cd BackEnd && npx nodemon server.js",
    "dev:watch": "concurrently \"npm run backend:watch\" \"npm run frontend\""
  },
  "keywords": [
    "campus",
    "gigs",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
