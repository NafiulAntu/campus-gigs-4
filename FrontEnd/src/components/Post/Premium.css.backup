  opacity: 0;
  transition: opacity 0.4s ease;
}

.pricing-card:hover {
  transform: translateY(-12px);
  box-shadow: 0 30px 60px rgba(37, 99, 235, 0.3);
  border-color: rgba(37, 99, 235, 0.5);
}

.pricing-card:hover::before {
  opacity: 1;
}

