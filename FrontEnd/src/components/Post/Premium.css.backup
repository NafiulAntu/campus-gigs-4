/* Premium User Dashboard */
.premium-header {
  text-align: center;
  margin-bottom: 40px;
}

.premium-header h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 8px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.subscription-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
  margin-bottom: 60px;
}

.detail-card {
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 24px;
  text-align: center;
}

.detail-card h3 {
  font-size: 0.875rem;
  color: #6b7280;
  text-transform: uppercase;
  margin-bottom: 12px;
  font-weight: 600;
}

.plan-type {
  font-size: 1.5rem;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8px;
}

.price {
  font-size: 1.125rem;
  color: #667eea;
  font-weight: 600;
}

.status {
  display: inline-block;
  padding: 6px 16px;
  border-radius: 20px;
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 8px;
}

.status.active {
  background: #d1fae5;
  color: #065f46;
}

.status.expired {
  background: #fee2e2;
  color: #991b1b;
}

.expiry {
  color: #6b7280;
  font-size: 0.875rem;
}

.enabled {
  color: #059669;
  font-weight: 600;
  font-size: 1.125rem;
  margin-bottom: 16px;
}

.disabled {
  color: #dc2626;
  font-weight: 600;
  font-size: 1.125rem;
  margin-bottom: 16px;
}

.cancel-btn,
.reactivate-btn {
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #fee2e2;
  color: #991b1b;
}

.cancel-btn:hover {
  background: #fecaca;
}

.reactivate-btn {
  background: #d1fae5;
  color: #065f46;
}

.reactivate-btn:hover {
  background: #a7f3d0;
}

/* Features Section */
.features-section {
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 16px;
  padding: 32px;
}

.features-section h2 {
  font-size: 1.5rem;
  margin-bottom: 24px;
  text-align: center;
  color: #1f2937;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: #f9fafb;
  border-radius: 8px;
  font-size: 0.95rem;
  color: #6b7280;
}

.feature-item.active {
  background: #ecfdf5;
  color: #065f46;
}

.feature-item .icon {
  font-size: 1.25rem;
  font-weight: 700;
}

@media (max-width: 768px) {
  .premium-hero h1 {
    font-size: 2rem;
  }

  .premium-hero p {
    font-size: 1rem;
  }

  .pricing-cards {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .pricing-card {
    padding: 32px 24px;
  }

  .plan-icon {
    width: 60px;
    height: 60px;
    font-size: 2rem;
  }

  .amount {
    font-size: 3rem;
  }

  .methods {
    gap: 16px;
  }

  .method-item {
    padding: 12px;
  }

  .method-icon {
    width: 40px;
    height: 40px;
    font-size: 1.25rem;
  }

  .faq-grid {
    grid-template-columns: 1fr;
  }

  .faq-icon {
    width: 50px;
    height: 50px;
  }

  .subscription-details {
    grid-template-columns: 1fr;
  }

  .features-grid {
    grid-template-columns: 1fr;
  }
}

/* Smooth scrolling */
* {
  scroll-behavior: smooth;
}

/* Override any existing scrollbar styles */
.flex-1.overflow-y-auto::-webkit-scrollbar {
  display: none !important;
}

.flex-1.overflow-y-auto {
  -ms-overflow-style: none !important;
  scrollbar-width: none !important;
}
